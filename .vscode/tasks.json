{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-ggdb",
                "-O0",
                "${file}",
                "-o",
                "${fileDirname}/build/${fileBasenameNoExtension}",
                "--std=c++23",
                "-Wall",
                "-fsanitize=address,undefined,leak"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}